{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "outDir": "dist",
    "downlevelIteration": true
  },
  "include": ["scripts/**/*.ts", "examples/**/*.ts"],
  "exclude": ["node_modules"]
}
